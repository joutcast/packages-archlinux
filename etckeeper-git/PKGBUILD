#Maintainer: John K. Luebs <jkluebs@luebsphoto.com>

pkgname=etckeeper
pkgver=20120812
pkgrel=1
pkgdesc="collection of tools to let /etc be stored in a git, hg or bzr repository."
arch=('any')
backup=('etc/etckeeper/etckeeper.conf')
url="http://kitenet.net/~joey/code/etckeeper/"
license=('GPL2')
provides=('etckeeper')
makedepends=('git')
depends=('git')
source=('etckeeper.conf.patch')
sha1sums=('8d77501cc79de7fb180f6a95262a57cfdf4d47dc')

_gitroot="git://git.kitenet.net/etckeeper"
_gitname="etckeeper"

build() {
  cd $srcdir

  msg "Connecting to GIT server..."
  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  rm -rf $pkgdir/etc/apt
  patch -p0 <$srcdir/etckeeper.conf.patch

  make DESTDIR=$pkgdir install || return 1
}
